<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shiftmate.NewShiftActivity"
    tools:showIn="@layout/activity_new_shift"
    android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="15dp">

            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Shift Information"
                android:id="@+id/textView29"
                android:textSize="17sp"
                android:clickable="true"
                android:textAlignment="center"
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_alignTop="@+id/imageView8"
                android:layout_toLeftOf="@+id/shiftEndTimeText"
                android:layout_toStartOf="@+id/shiftEndTimeText"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp" />

            <ImageView
                android:background="@drawable/ic_date_range_black_36dp"
                android:id="@+id/imageView8"
                android:layout_column="27"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/ssButton"
                android:layout_toEndOf="@+id/ssButton" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="From"
                android:id="@+id/textView5"
                android:textSize="18sp"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:layout_weight="0.7">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="New Text"
                android:id="@+id/shiftBeginDateText"
                android:layout_weight="1"
                android:textSize="16sp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:textStyle="bold"
                android:layout_alignTop="@+id/textView5"
                android:layout_alignLeft="@+id/notesText"
                android:layout_alignStart="@+id/notesText"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="New Text"
                android:id="@+id/shiftBeginTimeText"
                android:layout_weight="1"
                android:textSize="16sp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:textStyle="bold"
                android:layout_above="@+id/totalHoursText"
                android:layout_toRightOf="@+id/shiftBeginDateText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal|center">

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="To"
                android:id="@+id/textView27"
                android:textSize="18sp"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:layout_weight="0.7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="New Text"
                android:id="@+id/shiftEndDateText"
                android:layout_weight="1"
                android:textSize="16sp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:textStyle="bold"
                android:layout_alignTop="@+id/textView27"
                android:layout_alignLeft="@+id/notesText"
                android:layout_alignStart="@+id/notesText"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="New Text"
                android:id="@+id/shiftEndTimeText"
                android:layout_weight="1"
                android:textSize="16sp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:textStyle="bold"
                android:layout_above="@+id/totalHoursText"
                android:layout_toRightOf="@+id/shiftEndDateText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal|center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Break (unpaid)"
                android:id="@+id/textView13"
                android:textSize="18sp"
                android:clickable="true"
                android:layout_alignTop="@+id/breakTimeText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1" />

            <EditText
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/breakTimeText"
                android:maxLength="3"
                android:layout_alignLeft="@+id/totalHoursText"
                android:layout_alignStart="@+id/totalHoursText"
                android:layout_alignTop="@+id/textView11"
                android:layout_toLeftOf="@+id/shiftEndTimeText"
                android:layout_toStartOf="@+id/shiftEndTimeText"
                android:textAlignment="center"
                android:layout_weight="1.30"
                android:textColor="@color/BLUE_GREY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Minutes"
                android:id="@+id/textView11"
                android:textSize="18sp"
                android:clickable="true"
                android:layout_below="@+id/shiftEndTimeText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#212121"
            android:layout_marginTop="2dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal|center"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pay Per Hour"
            android:id="@+id/textView28"
            android:textSize="18sp"
            android:clickable="true"
            android:layout_alignTop="@+id/payPerHourText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/payPerHourText"
            android:maxLength="4"
            android:layout_alignLeft="@+id/totalHoursText"
            android:layout_alignStart="@+id/totalHoursText"
            android:layout_alignTop="@+id/textView31"
            android:layout_toLeftOf="@+id/shiftEndTimeText"
            android:layout_toStartOf="@+id/shiftEndTimeText"
            android:textAlignment="center"
            android:layout_weight="1.30"
            android:textColor="@color/BLUE_GREY" />

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal|center"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Tips"
                android:id="@+id/textView9"
                android:textSize="18sp"
                android:clickable="true"
                android:layout_alignBottom="@+id/tipsText"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12"
                android:layout_weight="1" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/tipsText"
                android:maxLength="3"
                android:layout_below="@+id/breakTimeText"
                android:layout_alignLeft="@+id/salesText"
                android:layout_alignStart="@+id/salesText"
                android:layout_alignRight="@+id/salesText"
                android:layout_alignEnd="@+id/salesText"
                android:layout_marginLeft="20dp"
                android:layout_weight="6.44"
                android:textColor="@color/BLUE_GREY"
                android:textAlignment="center" />

            <ImageView
                android:background="@drawable/ic_action_name"
                android:id="@+id/imageView5"
                android:layout_column="27"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/ssButton"
                android:layout_toEndOf="@+id/ssButton"
                android:layout_weight="2"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="12dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal|center"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sales"
                android:id="@+id/textView14"
                android:textSize="18sp"
                android:clickable="true"
                android:layout_alignBottom="@+id/salesText"
                android:layout_alignLeft="@+id/textView9"
                android:layout_alignStart="@+id/textView9" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/salesText"
                android:maxLength="3"
                android:layout_above="@+id/notesText"
                android:layout_alignLeft="@+id/notesText"
                android:layout_alignStart="@+id/notesText"
                android:layout_toLeftOf="@+id/shiftBeginTimeText"
                android:layout_toStartOf="@+id/shiftBeginTimeText"
                android:textColor="@color/BLUE_GREY"
                android:textAlignment="center" />

            <ImageView
                android:background="@drawable/ic_local_atm_black_24dp"
                android:id="@+id/imageView6"
                android:layout_column="27"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/ssButton"
                android:layout_toEndOf="@+id/ssButton"
                android:layout_weight="2"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal|center"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Notes"
                android:id="@+id/textView15"
                android:textSize="18sp"
                android:clickable="true"
                android:layout_alignBottom="@+id/notesText"
                android:layout_alignLeft="@+id/textView14"
                android:layout_alignStart="@+id/textView14" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/notesText"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textView10"
                android:layout_alignRight="@+id/ssButton"
                android:layout_alignEnd="@+id/ssButton"
                android:layout_weight="8.62"
                android:textColor="@color/BLUE_GREY"
                android:textAlignment="center" />

            <ImageView
                android:background="@drawable/ic_description_black_24dp"
                android:id="@+id/imageView7"
                android:layout_column="27"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/ssButton"
                android:layout_toEndOf="@+id/ssButton"
                android:layout_weight="1.74"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#212121"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal|center"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Total Hours:"
                android:id="@+id/textView30"
                android:textSize="17sp"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:textAlignment="center"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456:30"
                android:id="@+id/totalHoursText"
                android:textSize="17sp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:textStyle="bold"
                android:layout_alignTop="@+id/textView10"
                android:layout_toRightOf="@+id/textView10"
                android:layout_toEndOf="@+id/textView10"
                android:layout_weight="1" />

        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal|center"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total Pay:"
            android:id="@+id/textView33"
            android:textSize="17sp"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:textAlignment="center"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="$1000000"
            android:id="@+id/totalPayText"
            android:textSize="17sp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:textStyle="bold"
            android:layout_above="@+id/ssButton"
            android:layout_toRightOf="@+id/textView13"
            android:layout_toEndOf="@+id/textView13"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal|center"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Paid Hours:"
                android:id="@+id/textView32"
                android:textSize="17sp"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:textAlignment="center"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="123456:30"
                android:id="@+id/totalPaidHoursText"
                android:textSize="17sp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:textStyle="bold"
                android:layout_above="@+id/ssButton"
                android:layout_toRightOf="@+id/textView13"
                android:layout_toEndOf="@+id/textView13"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:text="Save Shift"
            android:id="@+id/ssButton"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            style="@style/ButtonTextColor" />

    </LinearLayout>
