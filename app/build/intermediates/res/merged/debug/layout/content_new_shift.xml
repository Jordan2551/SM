<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shiftmate.NewShiftActivity"
    tools:showIn="@layout/activity_new_shift"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Shift Begin:"
        android:id="@+id/textView5"
        android:textSize="20sp"
        android:clickable="true">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="New Text"
        android:id="@+id/shiftBeginDateText"
        android:layout_weight="0.81"
        android:textSize="20sp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ssButton"
        android:layout_alignEnd="@+id/ssButton">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Shift End:"
        android:id="@+id/textView7"
        android:textSize="20sp"
        android:clickable="true"
        android:layout_below="@+id/shiftBeginDateText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="New Text"
        android:id="@+id/shiftEndDateText"
        android:layout_weight="0.81"
        android:textSize="20sp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:layout_below="@+id/shiftBeginDateText"
        android:layout_alignLeft="@+id/shiftBeginDateText"
        android:layout_alignStart="@+id/shiftBeginDateText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="New Text"
        android:id="@+id/shiftBeginTimeText"
        android:layout_weight="0.81"
        android:textSize="20sp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:layout_above="@+id/shiftEndDateText"
        android:layout_toRightOf="@+id/shiftBeginDateText"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="New Text"
        android:id="@+id/shiftEndTimeText"
        android:layout_weight="0.81"
        android:textSize="20sp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:layout_below="@+id/shiftBeginTimeText"
        android:layout_alignLeft="@+id/shiftBeginTimeText"
        android:layout_alignStart="@+id/shiftBeginTimeText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Minutes"
        android:id="@+id/textView11"
        android:textSize="18sp"
        android:clickable="true"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/shiftEndTimeText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/breakTimeText"
        android:maxLength="3"
        android:layout_alignLeft="@+id/shiftEndDateText"
        android:layout_alignStart="@+id/shiftEndDateText"
        android:layout_alignTop="@+id/textView11"
        android:layout_toLeftOf="@+id/shiftEndTimeText"
        android:layout_toStartOf="@+id/shiftEndTimeText" />

    <Button
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:text="Save Shift"
        android:id="@+id/ssButton"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="171dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Hours:"
        android:id="@+id/textView10"
        android:textSize="20sp"
        android:clickable="true"
        android:layout_below="@+id/breakTimeText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Paid Hours:"
        android:id="@+id/textView12"
        android:textSize="20sp"
        android:clickable="true"
        android:layout_below="@+id/textView10"
        android:layout_toLeftOf="@+id/totalHoursText"
        android:layout_toStartOf="@+id/totalHoursText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="New Text"
        android:id="@+id/totalHoursText"
        android:layout_weight="0.81"
        android:textSize="20sp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView10"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="New Text"
        android:id="@+id/totalPaidHoursText"
        android:layout_weight="0.81"
        android:textSize="20sp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:layout_below="@+id/textView10"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Break (unpaid)"
        android:id="@+id/textView13"
        android:textSize="18sp"
        android:clickable="true"
        android:layout_alignTop="@+id/breakTimeText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
