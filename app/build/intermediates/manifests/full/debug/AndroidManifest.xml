<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shiftmate"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <supports-screens />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.shiftmate.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.shiftmate.NewShiftActivity"
            android:label="@string/title_activity_new_shift"
            android:parentActivityName="com.example.shiftmate.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shiftmate.MainActivity" />
        </activity>
        <activity
            android:name="com.example.shiftmate.ViewShifts.ViewShifts"
            android:label="@string/title_activity_view_shifts"
            android:parentActivityName="com.example.shiftmate.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shiftmate.MainActivity" />
        </activity>
        <activity
            android:name="com.example.shiftmate.Settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.example.shiftmate.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shiftmate.MainActivity" />
        </activity>
        <activity
            android:name="com.example.shiftmate.DataGraph"
            android:label="@string/title_activity_data_chart"
            android:parentActivityName="com.example.shiftmate.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shiftmate.MainActivity" />
        </activity>
        <activity
            android:name="com.example.shiftmate.SettingsFragment"
            android:label="Settings"
            android:parentActivityName="com.example.shiftmate.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shiftmate.SettingsFragment" />
        </activity>
        <activity android:name="com.example.shiftmate.MessingAround" />
        <activity android:name="com.example.shiftmate.ViewShifts.ShiftTableAdapter" />
    </application>

</manifest>