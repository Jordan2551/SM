<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shiftbuddy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <supports-screens />

    <application
        android:allowBackup="true"
        android:backupAgent="com.example.shiftbuddy.BackupAgent.SBBackupAgentHelper"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:restoreAnyVersion="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAIV5UPLKQL92byS7WvhLL_YWphulpdAIt9y3VgAA" />

        <activity
            android:name="com.example.shiftbuddy.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.shiftbuddy.NewShiftActivity"
            android:label="@string/title_activity_new_shift"
            android:parentActivityName="com.example.shiftbuddy.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shiftbuddy.MainActivity" />
        </activity>
        <activity
            android:name="com.example.shiftbuddy.ViewShifts.ViewShifts"
            android:label="@string/title_activity_view_shifts"
            android:parentActivityName="com.example.shiftbuddy.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shiftbuddy.MainActivity" />
        </activity>
        <activity
            android:name="com.example.shiftbuddy.DataGraph"
            android:label="@string/title_activity_data_chart"
            android:parentActivityName="com.example.shiftbuddy.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shiftbuddy.MainActivity" />
        </activity>
        <activity
            android:name="com.example.shiftbuddy.SettingsFragment"
            android:label="Settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.shiftbuddy.MessingAround" />
        <activity android:name="com.example.shiftbuddy.ViewShifts.ShiftTableAdapter" />
        <activity
            android:name="com.example.shiftbuddy.Settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.example.shiftbuddy.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shiftbuddy.MainActivity" />
        </activity>
    </application>

</manifest>