<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".NewShiftActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="shiftMate"
        android:textSize="50sp"
        android:id="@+id/headerTV"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="What Would you like to do?"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_below="@+id/headerTV"
        android:layout_toRightOf="@+id/nsButton"
        android:layout_toEndOf="@+id/nsButton"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Latest Quick Shift Started: 10:03PM 2/3/2016"
        android:id="@+id/latestShiftTV"
        android:textColor="#030303"
        android:layout_gravity="center_horizontal"
        android:textStyle="italic"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:text="New Shift"
        android:id="@+id/nsButton"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/qsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

    <Button
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:text="Quick Shift"
        android:id="@+id/qsButton"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/latestShiftTV"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:text="View Shifts"
        android:id="@+id/vsButton"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/drButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:text="Delete Records"
        android:id="@+id/drButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/qsButton"
        android:layout_alignRight="@+id/qsButton"
        android:layout_alignEnd="@+id/qsButton"
        android:layout_alignLeft="@+id/qsButton"
        android:layout_alignStart="@+id/qsButton" />

</RelativeLayout>
