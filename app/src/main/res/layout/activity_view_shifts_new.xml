<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ViewShifts.ViewShiftsNEW"
    android:id="@+id/t"
    android:weightSum="1">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Show:"
            android:id="@+id/textView16"
            android:textAlignment="inherit"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:id="@+id/shiftRangeSpinner"
            android:spinnerMode="dropdown"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView16"
            android:layout_alignRight="@+id/shiftsToTV"
            android:layout_alignEnd="@+id/shiftsToTV"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="From:"
            android:id="@+id/textView17"
            android:textAlignment="inherit"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_below="@+id/shiftRangeSpinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="New Text"
            android:id="@+id/shiftsFromTV"
            android:layout_weight="0.81"
            android:textSize="16dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:textStyle="bold"
            android:layout_alignTop="@+id/textView17"
            android:layout_toRightOf="@+id/textView17"
            android:layout_toEndOf="@+id/textView17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="To:"
            android:id="@+id/textView19"
            android:textAlignment="inherit"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/shiftsFromTV"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="New Text"
            android:id="@+id/shiftsToTV"
            android:layout_weight="0.81"
            android:textSize="16dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:textStyle="bold"
            android:layout_alignTop="@+id/textView19"
            android:layout_toRightOf="@+id/textView19"
            android:layout_toEndOf="@+id/textView19" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Print"
            android:id="@+id/button3"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/shiftRangeSpinner"
            android:layout_toEndOf="@+id/shiftRangeSpinner" />

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="403dp">

        <de.codecrafters.tableview.SortableTableView
            android:id="@+id/tableView"
            android:layout_below="@id/toolbar"
            android:layout_width="800dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            custom:tableView_columnCount="7"
            custom:tableView_headerColor="@color/LIGHT_GREEN"
            custom:tableView_headerElevation="10"/>

    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Total Hours:"
            android:id="@+id/textView21"
            android:textAlignment="inherit"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="114dp"
            android:layout_marginStart="114dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="100"
            android:id="@+id/totalHoursTextView"
            android:layout_weight="0.81"
            android:textSize="17dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/textView21"
            android:layout_toRightOf="@+id/textView21"
            android:layout_toEndOf="@+id/textView21" />
    </RelativeLayout>


</LinearLayout>
