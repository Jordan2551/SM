<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewShifts.ViewShiftsNEW"
    >


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3"
        android:layout_below="@+id/shiftRangeSpinner"
        android:id="@+id/dateFilterLayout"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Show:"
            android:id="@+id/textView16"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shiftRangeSpinner"
            android:spinnerMode="dropdown"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView16"
            android:layout_alignRight="@+id/shiftsFilterToText"
            android:layout_alignEnd="@+id/shiftsFilterToText"
            android:textAlignment="center"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="From:"
            android:id="@+id/fromText"
            android:textAlignment="inherit"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_below="@+id/shiftRangeSpinner"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/shiftsFilterFromText"
            android:layout_weight="1"
            android:textSize="16dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:textStyle="bold"
            android:layout_alignTop="@+id/fromText"
            android:layout_toRightOf="@+id/fromText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="To:"
            android:id="@+id/toText"
            android:textAlignment="inherit"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_below="@+id/shiftRangeSpinner"
            android:layout_toRightOf="@+id/shiftsFilterFromText"
            android:layout_toEndOf="@+id/shiftsFilterFromText"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/shiftsFilterToText"
            android:layout_weight="1"
            android:textSize="16dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:textStyle="bold"
            android:layout_below="@+id/shiftRangeSpinner"
            android:layout_toRightOf="@+id/toText" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <Button
            style="@style/ButtonTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;---"
            android:id="@+id/prevIntervalBtn"
            android:layout_weight="1" />

        <Button
            style="@style/ButtonTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--->"
            android:id="@+id/nxtIntervalBtn"
            android:layout_weight="1"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Print"
            android:id="@+id/button3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            style="@style/ButtonTextColor"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_marginTop="10dp"
        android:layout_weight="140"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

    <de.codecrafters.tableview.SortableTableView
        android:id="@+id/tableView"
        android:layout_below="@id/toolbar"
        android:layout_width="980dp"
        android:layout_height="match_parent"
        android:textAlignment="center"
        custom:tableView_columnCount="8"
        custom:tableView_headerColor="@color/LIGHT_BLUE"
        custom:tableView_headerElevation="10"
        android:theme="@style/Base.AlertDialog.AppCompat.Light" />

</HorizontalScrollView>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
        android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Total Hours:"
                android:id="@+id/textView21"
                android:textAlignment="inherit"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:id="@+id/totalHoursText"
                android:layout_weight="1"
                android:textSize="20dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/textView21"
                android:layout_toRightOf="@+id/textView21"
                android:layout_toEndOf="@+id/textView21"
                android:gravity="center" />

        </LinearLayout>

</LinearLayout>

