<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewShifts.ViewShiftsNEW"
    android:weightSum="10">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="From:"
            android:id="@+id/fromText"
            android:textAlignment="inherit"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_below="@+id/shiftRangeSpinner"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/shiftsFilterFromText"
            android:layout_weight="1"
            android:textSize="16dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:textStyle="bold"
            android:layout_alignTop="@+id/fromText"
            android:layout_toRightOf="@+id/fromText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="To:"
            android:id="@+id/toText"
            android:textAlignment="inherit"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_below="@+id/shiftRangeSpinner"
            android:layout_toRightOf="@+id/shiftsFilterFromText"
            android:layout_toEndOf="@+id/shiftsFilterFromText"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/shiftsFilterToText"
            android:layout_weight="1"
            android:textSize="16dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:textStyle="bold"
            android:layout_below="@+id/shiftRangeSpinner"
            android:layout_toRightOf="@+id/toText" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/LIGHT_PURPLE"
        android:layout_weight="0.2">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:background="@drawable/ic_arrow_back"
            android:id="@+id/prevIntervalBtn" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:background="@drawable/ic_arrow_forward"
            android:id="@+id/nxtIntervalBtn"
            android:layout_marginLeft="3dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/ic_print"
            android:id="@+id/printBtn"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="33dp"
            android:id="@+id/shiftRangeSpinner"
            android:spinnerMode="dropdown"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView16"
            android:layout_alignRight="@+id/shiftsFilterToText"
            android:layout_alignEnd="@+id/shiftsFilterToText"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="1" />

    </LinearLayout>

    <HorizontalScrollView
    android:layout_width="fill_parent"
    android:layout_height="0dp"
        android:layout_alignParentStart="false"
        android:layout_marginTop="10dp"
        android:layout_weight="7.5">

    <de.codecrafters.tableview.SortableTableView
        android:id="@+id/tableView"
        android:layout_below="@id/toolbar"
        android:layout_width="980dp"
        android:layout_height="match_parent"
        android:textAlignment="center"
        custom:tableView_columnCount="8"
        custom:tableView_headerColor="@color/LIGHT_PURPLE"
        custom:tableView_headerElevation="10" />

</HorizontalScrollView>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
        android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Total Hours:"
                android:id="@+id/textView21"
                android:textAlignment="inherit"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:id="@+id/totalHoursText"
                android:layout_weight="1"
                android:textSize="20dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/textView21"
                android:layout_toRightOf="@+id/textView21"
                android:layout_toEndOf="@+id/textView21"
                android:gravity="center" />

        </LinearLayout>

</LinearLayout>

